{
  "name": "rate-my-openapi",
  "version": "1.17.0",
  "scripts": {
    "build": "tsc --build",
    "format": "prettier --write .",
    "release": "npm version minor",
    "version": "npm version $npm_package_version --workspaces && git add **/package.json",
    "postversion": "git push --tags && git push"
  },
  "workspaces": [
    "apps/api",
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/node18": "^18.2.0",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
  }
}

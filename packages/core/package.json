{
  "name": "@rate-my-openapi/core",
  "version": "1.0.0",
  "description": "Core utilities for producing an OpenAPI rating",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build"
  },
  "author": "Zuplo",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuplo/rate-my-openapi-cli.git"
  },
  "bugs": {
    "url": "https://github.com/zuplo/rate-my-openapi-cli/issues"
  },
  "homepage": "https://github.com/zuplo/rate-my-openapi-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "**/*.{ts,json,md,yml,js,css,html,yaml}": [
      "prettier --write"
    ],
    "**/*.{ts,js}": [
      "eslint --cache --fix --ignore-path .eslintignore"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.3",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "lint-staged": "^13.2.0",
    "prettier-plugin-organize-imports": "^3.2.2",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "openapi-types": "^12.1.3",
    "prettier": "^2.8.8"
  },
  "files": [
    "dist/**/**/*",
    "*.js",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
